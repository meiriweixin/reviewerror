# Frontend Dockerfile - React App with serve
# Rebuild trigger: force env vars
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Install serve globally
RUN npm install -g serve

# Use port 8080 (serve default)
ENV PORT=8080
EXPOSE 8080

# Serve the build folder on port 8080
CMD ["serve", "-s", "build", "-l", "8080"]
